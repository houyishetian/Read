<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chapter_current_chapter"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:ellipsize="middle"
            android:gravity="center"
            android:maxLines="1"
            android:text=""
            android:textSize="18sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/chapter_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chapter_previous_chapter"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="上一章" />

            <TextView
                android:id="@+id/chapter_next_chapter"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:text="下一章" />

        </LinearLayout>
    </LinearLayout>

    <include
        android:id="@+id/layout_chapters"
        layout="@layout/layout_book_chapter"
        android:visibility="gone" />

</FrameLayout>