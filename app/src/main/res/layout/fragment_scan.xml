<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/scan_filter"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="筛选" />

            <RelativeLayout
                android:id="@+id/scan_sort"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/sort" />

            </RelativeLayout>

            <TextView
                android:id="@+id/scan_result_qidian"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal|bottom"
                android:visibility="gone"
                android:textSize="13sp" />

            <LinearLayout
                    android:id="@+id/scan_result_youshu"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal|bottom"
                    android:visibility="gone"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/scan_ys_previous_page"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="上一页" />

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:orientation="horizontal">
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:background="@drawable/shape_scan_type_item_selected">

                        <EditText
                                android:id="@+id/scan_ys_skip_page"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:gravity="center"
                                android:maxLines="1"
                                android:inputType="number"
                                android:maxLength="4"
                                android:textSize="13sp"
                                android:imeOptions="actionDone"
                                android:layout_weight="1"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="/"/>

                        <TextView
                                android:id="@+id/scan_ys_total_page"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textSize="13sp"
                                android:maxLength="4"
                                android:layout_weight="1"/>
                    </LinearLayout>
                    <TextView
                            android:id="@+id/scan_ys_skip"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:text="Go"
                            android:gravity="center"/>

                </LinearLayout>

                <TextView
                        android:id="@+id/scan_ys_next_page"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="下一页" />
            </LinearLayout>

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="#CFCFCF" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@android:color/white"
            android:layout_weight="1">

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:id="@+id/rcv_scan_all_books"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/empty_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="没有书籍"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@android:color/darker_gray"
                android:gravity="center"/>
        </RelativeLayout>
    </LinearLayout>

    <include
        android:id="@+id/layout_scan_filter"
        android:visibility="gone"
        layout="@layout/layout_scan_filter" />
</FrameLayout>