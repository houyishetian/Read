<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
            android:id="@+id/ll_scan_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

        <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="分类"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_scan_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_scan_wordsNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

        <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="字数"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_scan_wordsNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_scan_book_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

        <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="状态"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_scan_book_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_scan_update_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

        <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="更新"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_scan_update_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_scan_sort_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

        <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="排序"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_scan_sort_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>